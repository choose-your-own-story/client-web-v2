apiVersion: v1
kind: Service
metadata:
  name: story-maker-client
spec:
  # GCE Ingress has to be 'NodePort' or 'LoadBalancer'
  type: LoadBalancer
  ports:
    - name: http
      port: 80
      targetPort: 80
  selector:
    app: story-maker-client

---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: story-maker-client
spec:
  replicas: 1
  selector:
    matchLabels:
      app: story-maker-client
  template:
    metadata:
      labels:
        app: story-maker-client
    spec:
      containers:
        - name: story-maker-client
          image: jotaram/story-maker-client:1.0.0
          ports:
            - containerPort: 80

---

apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ingress-story-maker-client
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: letsencrypt-prod
spec:
  tls:
    - hosts:
        - story-maker-client.jrojaspin.com.ar
      secretName: hello-kubernetes-tls-story-maker-client
  rules:
    - host: story-maker-client.jrojaspin.com.ar
      http:
        paths:
          - pathType: Prefix
            path: "/"
            backend:
              service:
                name: story-maker-client
                port:
                  number: 80
